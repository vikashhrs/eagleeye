<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vikashkumarsharma.eagleeye.MainActivity">


    <fragment
        android:id="@+id/googleMap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.MapFragment"
        map:cameraTargetLat="17.42636633"
        map:cameraTargetLng="78.32602693"
        map:cameraBearing="112.5"

        map:cameraZoom="17"/>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:padding="4dp">

        <ImageView
            android:id="@+id/moreOptionsImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_menu_black"
            android:layout_alignParentLeft="true"/>

        <ImageView
            android:id="@+id/logoutImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_power_settings"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


</RelativeLayout>
